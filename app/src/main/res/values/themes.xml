<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royal_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/ghost</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rhino</item>
        <item name="colorSecondaryVariant">@color/rhino</item>
        <item name="colorOnSecondary">@color/alabaster</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/alabaster</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorBottomNavBackground">@color/white</item>
        <item name="colorBottomNavItemSelected">@color/royal_blue</item>
        <item name="colorFragmentBackground">@color/alabaster</item>
    </style>
</resources>